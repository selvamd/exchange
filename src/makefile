# SYNOPSIS:
#   make [all]  - makes everything.
#   make TARGET - makes the given target.
#   make clean  - removes all files generated by make.

#   HEADERS = DomainDatabase.hh DbtestDomainObjects.hh DataTypes.hpp Containers.hpp TcpUtils.hpp SocketStreamerBase.hh MemoryFence.h ux_selector.hpp gx_ipc.h
CC = g++ 
CPPFLAGS = -I../include -I/Users/selvamdoraisamy/local/Desktop/github/phoenix -std=c++11 -g -Wall -Wextra -fvisibility=hidden -D_REENTRANT
LDFLAGS = -L "/Users/selvamdoraisamy/local/Desktop/github/phoenix" -lphoenix -lcurl -lm 

#test.cpp reporter.cpp watchlist.cpp refdatamgrsvc.cpp gatewaysvc.cpp loginsvc.cpp accountsvc.cpp 
SOURCES = matcher.cpp exchcli.cpp
OBJECTS=$(SOURCES:.cpp=.o)
EXECUTABLE=$(SOURCES:.cpp=)

all: $(EXECUTABLE)

.o: $(SOURCES)
	$(CC) -c $(CPPFLAGS) -o $@ $< 

$(EXECUTABLE): $(OBJECTS)
	$(CC) $@.o $(CPPFLAGS) $(LDFLAGS) -o ../bin/$@ 

clean:
	rm -f $(OBJECTS) 
